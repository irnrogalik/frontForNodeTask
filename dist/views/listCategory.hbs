<p><a href="/categories/add">Add category</a></p>

{{#if categories}}
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th>Category name</th>
            <th>Tax name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each categories}}
            <tr>
                <td>{{Name}}</td>
                <td>{{TaxName}}</td>
                <td>
                    <form action="/categories/delete/{{this.Id}}" method="POST">
                        <input type="submit" value="Delete"/>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}


